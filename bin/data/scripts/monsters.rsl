class BaseMonster
	var monster = null

	func SetMonster(monster)
		this.monster = monster
	end
end

class GoblinGuard extends BaseMonster

	func StartEvilTurn()
		return monster.CanSeePlayer()
	end

	func UpdateEvilTurn()
		if monster.CanSeePlayer() then
			if monster.CanAttackPlayer() then
				monster.AttackPlayer()
			elseif (monster.CanMoveTowardPlayer())
				monster.MoveTowardPlayer()
			end
		else
			monster.Wander()
		end
	end
	
end